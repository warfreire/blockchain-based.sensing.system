{
  "name":"nmiblocknet_default",
  "description":"Connection profile to access the nmiblocknet from the PTB org",
  "version":"0.1",
  "client":{
    "organization":"PTB",
    "credentialStore":{
      "path":"/tmp/hfc-kvs",
      "cryptoStore":{
        "path":"/tmp/hfc-cvs"
      },
      "wallet":"wallet-name"
    }
  },
  "channels": {
    "nmi-channel": {
        "orderers": [
            "orderer.nmi"
        ],
        "peers": {
            "peer0.inmetro.br": {
                "endorsingPeer": true,
                "chaincodeQuery": true,
                "ledgerQuery": true,
                "eventSource": true
            }
        }
    }
  },
  "organizations":{
    "orderer.nmi":{
      "mspid": "OrdererMSP",
      "orderers": [
        "orderer.nmi"
      ],
      "users": {
        "Admin": {
          "cert": "./crypto-config/ordererOrganizations/orderer.nmi/users/Admin@orderer.nmi/msp/signcerts/Admin@orderer.nmi-cert.pem",
          "private_key": "./crypto-config/ordererOrganizations/orderer.nmi/users/Admin@orderer.nmi/msp/keystore/d7ab1e1d387bbf4be6eca4cb1c15afd8581f2f469da57a7dff5090711d2d1bb9_sk"}
      }
    },
    "inmetro.br":{
      "mspid": "InmetroMSP",
      "peers":[
        "peer0.inmetro.br"
      ],
      "users": {
        "Admin": {
          "cert": "./crypto-config/peerOrganizations/inmetro.br/users/Admin@inmetro.br/msp/signcerts/Admin@inmetro.br-cert.pem",
          "private_key": "./crypto-config/peerOrganizations/inmetro.br/users/Admin@inmetro.br/msp/keystore/e16b3305d87eb3973f9d33109bcd54508293ab385d54f2e509c56e701d7f3dcd_sk"
        }
      }
    }
  },
  "orderers":{
    "orderer.nmi":{
      "url":"10.24.241.66:7050",
      "grpcOptions": {
        "grpc.ssl_target_name_override": "orderer.nmi",
        "grpc-max-send-message-length": 15
      },
      "tlsCACerts": {
        "path": "./crypto-config/ordererOrganizations/orderer.nmi/tlsca/tlsca.orderer.nmi-cert.pem"
      },
      "clientKey": {
        "path": "./crypto-config/ordererOrganizations/orderer.nmi/orderers/orderer.nmi.orderer.nmi/tls/server.key"
      },
      "clientCert": {
        "path": "./crypto-config/ordererOrganizations/orderer.nmi/orderers/orderer.nmi.orderer.nmi/tls/server.crt"
      }
    }
  },
  "peers":{
    "peer0.inmetro.br":{
      "url":"10.24.241.66:7051",
      "eventUrl":"10.24.241.66:7053",
      "grpcOptions": {
        "grpc.ssl_target_name_override": "peer0.inmetro.br",
        "grpc-max-send-message-length": 15
