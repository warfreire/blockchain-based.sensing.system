      "clientKey": {
        "path": "./crypto-config/peerOrganizations/inmetro.br/peers/peer0.inmetro.br/tls/server.key"
      },
      "clientCert": {
        "path": "./crypto-config/peerOrganizations/inmetro.br/peers/peer0.inmetro.br/tls/server.crt"
